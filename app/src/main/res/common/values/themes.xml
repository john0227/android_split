<resources>
    <!-- Base application theme. -->
    <style name="Theme.Split" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/my_primary_purple</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:windowBackground">@color/purple_level_base</item>
        <item name="android:statusBarColor">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <!-- To change the popup menu and app text color  -->
        <item name="android:textColor">@color/my_primary_purple</item>
        <!-- To change the background of options menu-->
        <item name="android:itemBackground">@color/purple_level_2</item>
        <item name="android:buttonTint">@color/button_tint</item>
    </style>
    <!-- Button background color -->
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorPrimary">@color/purple_level_2</item>
    </style>
</resources>